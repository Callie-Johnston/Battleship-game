#pragma once
#include "Location.h"
#include "Ship.h"
//#include "board.h"

#define EMPTY 1
#define HAS_SHIP 2
#define BEEN_SHOT_EMPTY 3
#define BEEN_SHOT_HAS_SHIP 4

namespace BattleshipAI {

  const int width = 10;
  const int height = 10;

	// The guessing strategies
	enum {
		spiral_out,
		spiral_in,
		random_unorganized,
		random_only_diag,
		x_subdivide
	};

	class AI {
	public:
	        AI(int guess_strat = random_only_diag, int width = width, int hight = height);  // Constructer

		// Update board
		void update(/*stdin*/);

		// Returns the size of the smallest ship not already destroyed
		int smallestShipLeft() const;

		// Returns location of ship that is partially destroyed
		Location unfinishedShip() const;

		// Location of guess
		Location Guess();
	private:
		// stores which strategy is being used
		int guessingStrat;

		// Array of which ships are destroyed
		int ships_left[5];

		// The array of the 
		int* board;
	};
}
