SRC := AI.cpp AI_main.cpp
OBJ := ${SRC:.cpp=.o}
CC := g++
CFLAGS := -Wall -g -std=c++0x

process_test: ${OBJ}
	${CC} ${CFLAGS} -o $@ ${OBJ}

%.o : %.cpp
	${CC} ${CXX_FLAGS} -MD -o $@ -c $<
	@cp $*.d $*.P; \
	  sed -e 's/#.*//' -e 's/^[^:]*: *//' -e 's/ *\\$$//' \
	      -e '/^$$/ d' -e 's/$$/ :/' < $*.P >> $*.d; \
	  rm -f $*.P

clean:
	-rm *.o *.d *~

archive:
	tar czf project.tar.gz Makefile_AI *.h *.cpp
